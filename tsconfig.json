{
    "compilerOptions": {
      "outDir": "./dist/",
      "target": "es2020",
      "lib": ["es2020", "dom", "es2021"],
      "moduleResolution": "node",
      "module": "commonjs",

      "allowJs": true,
      "strict": true,
      "stripInternal": true,
      "esModuleInterop": true,
      "pretty": true,

      "declaration": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}